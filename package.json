{
  "name": "hawlton-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "dev:open": "next dev --turbo & start chrome http://localhost:3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:qa": "node scripts/test-website.js",
    "analyze": "npm run build && npx @next/bundle-analyzer",
    "lighthouse": "npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "audit:security": "npm audit --audit-level=moderate",
    "precommit": "npm run lint && npm run type-check && npm run test:qa"
  },
